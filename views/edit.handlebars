<form action="/restaurants/{{ restaurant._id }}/edit" method="POST">

<label for="name">餐廳名稱</label>
<input type="text" name="name" id="name" value="{{ restaurant.name }}">

<label for="enName">餐廳英文名稱</label>
<input type="text" name="enName" id="enName" value="{{ restaurant.enName }}">

<label for="rating">餐廳評分</label>
<input type="text" name="rating" id="rating" value="{{ restaurant.rating }}">

<label for="category">餐廳類型</label>
<input type="text" name="category" id="category" value="{{ restaurant.category }}">

<label for="phoneNumber">餐廳電話號碼</label>
<input type="text" name="phoneNumber" id="phoneNumber" value="{{ restaurant.phoneNumber }}">

<label for="address">餐廳地址</label>
<input type="text" name="address" id="address" value="{{ restaurant.address }}">

<div class="mb-3">
  <label for="description" class="form-label">請你描述這家餐廳的特色（食物類型、氛圍、印象）</label>
  <textarea class="form-control" name="description" id="description" rows="3">{{ restaurant.description }}</textarea>
</div>

<label for="googleMap">Google地圖位置</label>
<input type="text" name="googleMap" id="googleMap" value="{{ restaurant.googleMap }}">

